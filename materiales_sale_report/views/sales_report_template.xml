<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="daily_sale_report">
        <t t-set="company" t-value="request.env.company"/>
            <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page" >
                    <t t-set="docs" t-as="o"/>
                    <div class="oe_structure"/>

                    <h1 style="text-align:center;">Corte de Caja</h1>
                    <div class="text-right">
                        <span class="col-auto mw-100 mb-2">Warehouse: <strong> <t t-esc="location['name']"/></strong> </span>
                        <span class="col-auto mw-100 mb-2">Date: <strong> <t t-esc="date"/></strong> </span> 
                    </div>
                    <span>Last Invoice: <span t-esc="last_invoice"/></span>

                    <table class="table table-sm o_main_table" string="Invoices">
                        <thead>
                            <tr>
                                <t t-set="colspan" t-value="5"/>
                                <th name="th_name" class="text-left"><span>Invoice Number</span></th>
                                <th name="th_customer" class="text-left"><span>Customer</span></th>
                                <th name="th_total" class="text-left"><span>Total</span></th>
                                <th name="th_status" class="text-left"><span>status</span></th>
                                <th name="th_type" class="text-center"><span>Payment</span></th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="total" t-value="0"/>
                            <t t-set="cash" t-value="0"/>
                            <t t-set="transfer" t-value="0"/>
                            <t t-set="credit" t-value="0"/>
                            <t t-set="check" t-value="0"/>
                            <t t-foreach="invoices" t-as="line">
                                <t t-if="line['down'] == False">
                                    <tr>
                                        <td class="text-left">
                                            <span t-esc="line['num']"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="line['partner_id'][1]"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="line['amount_total']"  t-options='{"precision": 2, "widget": "float"}'/>
                                        </td>
                                        <td class="text-left">
                                            <t t-if="line['invoice_payment_state'] == 'not_paid' and len(line['bills']) >= 1">Partially Paid</t>
                                            <t t-elif="line['state'] == 'cancel'">Cancelled</t>
                                            <t t-elif="line['invoice_payment_state'] == 'not_paid'">Open</t>
                                            <t t-else=""><span t-esc="line['invoice_payment_state']"/></t>
                                        </td>
                                        <td class="text-left">
                                            <t t-if="len(line['bills']) >= 1 ">
                                                <table class="table table-sm">  
                                                    <tbody>
                                                        <t t-set="colspan" t-value="3"/>
                                                        <t t-foreach="line['bills']" t-as="pay">
                                                            <tr>
                                                                <td>
                                                                    <t t-if="pay['payment_method'] and pay['payment_method'][1]">
                                                                        <t t-if="pay['payment_method'][1] == 'Efectivo'"><span>Efectivo</span><t t-set="cash" t-value="cash + pay['amount']"  t-options='{"widget": "float", "precision": 2}'/></t>
                                                                        <t t-if="pay['payment_method'][1] == 'Transferencia electrónica de fondos'"><span>Transferencia</span><t t-set="transfer" t-value="transfer + pay['amount']"  t-options='{"widget": "float", "precision": 2}'/></t>
                                                                        <t t-if="pay['payment_method'][1] == 'Tarjeta de Crédito'"><span>TC</span><t t-set="credit" t-value="credit + pay['amount']"  t-options='{"widget": "float", "precision": 2}'/></t>
                                                                        <t t-if="pay['payment_method'][1] == 'Cheque nominativo'"><span>Cheque</span><t t-set="check" t-value="check + pay['amount']"  t-options='{"widget": "float", "precision": 2}'/></t>

                                                                    </t>
                                                                    <t t-else="">
                                                                    <span>Credit Note</span>
                                                                    </t>
                                                                </td>
                                                                <t t-if="pay['ref'][0]=='R'"> 
                                                                    <td><span t-esc="pay['ref'].split(' (')[0]"/></td>
                                                                    <td><span t-esc="pay['amount']"  t-options='{"widget": "float", "precision": 2}'/></td>
                                                                </t>
                                                                <t t-else="">
                                                                    <td><t t-if="pay['payment_method']"><span t-esc="pay['payment_method'][0]"/></t></td> 
                                                                    <td><span t-esc="pay['amount']"  t-options='{"widget": "float", "precision": 2}'/></td>
                                                                    <t t-set="total" t-value="total + pay['amount']" />
                                                                </t>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>
                                                    
                                            
                                            </t>
                                            <t t-else="">
                                                <span>Cartera</span>
                                            </t>
                                            
                                        </td> 
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <!-- All totals -->
                    <div class="clearfix">
                        <div id="total">
                            <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="o_total">
                                        <td></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="total"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Efectivo</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="cash"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>TC</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="credit"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Transferencia</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="transfer"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Cheque</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="check"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                    <tr class="o_total">
                                        <td></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="total"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Down Payments -->
                    <table class="table table-sm o_main_table" string="Down Payments">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="3"/>
                                <th name="th_customer" class="text-left"><span>Invoice</span></th>
                                <th name="th_total" class="text-left"><span>Original Amount</span></th>
                                <th name="th_downpayments" class="text-left"><span>Down Payments</span></th>
                                <th name="th_total_down" class="text-left"><span>Total Payments</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="down_total" t-value="0"/>
                            <t t-foreach="invoices" t-as="line">
                                <t t-if="line['down'] == False and line['down_payment'] and len(line['down_payment']) >= 1">
                                    <tr>
                                        <td class="text-left">
                                            <span t-esc="int(line['name'].split('/')[-1])"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="line['amount_total']"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                        <td class="text-left">
                                            <div class="col-3">
                                                <table class="table table-sm o_main_table" style="page-break-inside: avoid;">
                                                    <thead>
                                                        <tr>
                                                            <!-- TODO: remove in master -->
                                                            <t t-set="colspan" t-value="2"/>
                                                            <th name="th_invoice" class="text-left"><span>Invoice</span></th>
                                                            <th name="th_total" class="text-left"><span>Amount</span></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <t t-foreach="line['down_payment']" t-as="down">
                                                            <t t-if="not down['state']=='cancel' ">
                                                                <tr>
                                                                    <td class="text-left">
                                                                        <span t-esc="int(down['name'].split('/')[-1])"/>
                                                                    </td>
                                                                    <td class="text-left">
                                                                        <span t-esc="down['amount_total']"  t-options='{"widget": "float", "precision": 2}'/>
                                                                        <t t-set="down_total" t-value="down_total + down['amount_total']" />
                                                                    </td>
                                                                </tr>
                                                            </t>
                                                        </t>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="col-3">
                                                <table class="table table-sm" style="page-break-inside: avoid;">
                                                    <tr class="o_down_total">
                                                        <td><strong>Total Downpayments:</strong></td>
                                                        <td class="text-right">
                                                            <span class="text-nowrap" t-esc="down_total"  t-options='{"widget": "float", "precision": 2}'/>
                                                        </td>
                                                    </tr>
                                                    <tr class="o_total">
                                                        <td><strong>Total:</strong></td>
                                                        <td class="text-right">
                                                            <span class="text-nowrap" t-esc="line['amount_total'] - down_total"  t-options='{"widget": "float", "precision": 2}'/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </td>
                                        <td class="text-left">
                                            <span class="text-nowrap" t-esc="down_total" t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>



                    <!-- Credit notes -->
                    <table class="table table-sm o_main_table" string="Credit Invoices">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="3"/>
                                <th name="th_name" class="text-left"><span>Customer</span></th>
                                <th name="th_customer" class="text-left"><span>Invoice Number</span></th>
                                <th name="th_total" class="text-left"><span>Amount</span></th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-foreach="invoices" t-as="line">
                                <t t-foreach="line['credit']" t-as="cred">
                                    <tr>
                                        <td class="text-left">
                                            <span t-esc="line['partner_id'][1]"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="cred['ref'].split(' (')[0]"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="cred['amount']"  t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>