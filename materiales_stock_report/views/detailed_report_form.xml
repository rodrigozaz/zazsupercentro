<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_detailed_report_materiales" model="ir.ui.view">
        <field name="name">Reporte de Existencias</field>
        <field name="model">detailed.inventory</field>
        <field name="arch" type="xml">
        <form string="Choose your date">
        <field name="user_id" invisible="1"/>
        <field name="warehouse_ids" invisible="1"/>
        <group>
            <group>
                <field name="warehouse_id" options="{'no_create':1,'no_create_edit':1}" domain="[('id','in',warehouse_ids)]"/>
                <field name="report_date"/>
            </group>
        </group>
        <footer>
            <button name="print_pdf_warehouse_sales" 
                string="Generate report" 
                type="object" 
                class="btn-primary"
                />
            <button name="export_xls" type="object" default_focus="1"
                string="Export Excel" class="oe_highlight"
                context="{'xls_export':1}" icon="fa-download"/>
            <button string="Cancel" class="btn-default" special="cancel" />
        </footer>
        </form>
        </field>
        </record>

        <record id="action_detailed_report_materiales" model="ir.actions.act_window">
        <field name="name">Reporte de Existencias</field>
        <field name="res_model">detailed.inventory</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_detailed_report_materiales"/>
        <field name="target">new</field>
        </record>

        <menuitem 
            id="menu_action_detailed_report_materiales" 
            action="action_detailed_report_materiales" 
            parent="stock.menu_warehouse_report" 
            sequence="1"        
        />
    </data>
</odoo>